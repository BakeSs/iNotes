<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/goodGray"
    android:gravity="center">

    <TextView
        android:id="@+id/input_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введіть назву папки"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/new_folder_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/input_folder_name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:autofillHints="searchable_folders_name"
        android:background="@color/black"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/appleYellow"/>

    <Button
        android:id="@+id/button_folder_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_folder_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/goodGray"
        android:fontFamily="sans-serif"
        android:text="@string/create_folder" />

</RelativeLayout>